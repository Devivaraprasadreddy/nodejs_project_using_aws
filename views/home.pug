extends default

block content
  .app
    header Random Chuck Norris Jokes
    section.jokes
      #js-joke-text.joke-text #{joke.value}
    #js-spinner.spinner.hidden
      .rect1
      .rect2
      .rect3
      .rect4
      .rect5
    section.controls
      button#js-new-joke.new-joke.button(type='button')
        | Generate a new joke
      a#js-tweet.twitter.button(target='_blank' rel='noreferrer') Tweet it!
